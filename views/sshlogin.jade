extends layout

block content
    .row
        .col-md-4.col-md-offset-4.margin-top
            h1 Logowanie SSH
            form(method='post' action='/login')
                .form-group
                    label.control-label Host
                    input.form-control(type='text' name='host' autofocus)
                .form-group
                    label.control-label Port (1-65535) [def: 22]
                    input.form-control(type='number' name='port' min='0' max='65535' value='22')
                .form-group
                    label.control-label Użytkownik
                    input.form-control(type='text' name='user')
                .form-group
                    label.control-label Hasło
                    input.form-control(type='password' name='password')
                .form-group
                    button.btn.btn-primary.pull-right(type='submit') Zaloguj